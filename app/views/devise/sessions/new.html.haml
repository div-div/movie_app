= render "movies/head"
.wrap
  .bar
    ログイン
  .form
    = form_with model: @user, url: user_session_path, method: :post, class: "form__top", local: true do |f|
      .form__top__main
        = f.label :email, class: "form__top__main__label"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form__top__main__field"
      .form__top__main
        = f.label :password, class: "form__top__main__label"
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "form__top__main__field"
      -#   - if devise_mapping.rememberable?
      -# .form__top__main
      -#   = f.check_box :remember_me
      -#   = f.label :remember_me
      .form__top__main
        = f.submit "Log in", class: "form__top__action__btn"

      = render "devise/shared/links"
